<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detailslayaout">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_medicine_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewMedicineName"
                    style="@style/mainDashBoardCardActivity"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="Medicine Name" />

                <TextView
                    android:id="@+id/medecinenameD"
                    style="@style/mainDashBoardCardActivit"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    tools:text="Medicine Name" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/OneD"
                style="@style/dailyMedicineStatisticsHeader"
                android:layout_width="0dp"
                android:fontFamily="@font/googlesans_medium"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--:-- " />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/TwoD"
                android:fontFamily="@font/googlesans_medium"
                style="@style/dailyMedicineStatisticsHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--:-- " />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/ThreeD"
                style="@style/dailyMedicineStatisticsHeader"
                android:layout_width="0dp"
                android:fontFamily="@font/googlesans_medium"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="--:-- " />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/FourD"
                android:fontFamily="@font/googlesans_medium"
                style="@style/dailyMedicineStatisticsHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--:-- " />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:orientation="horizontal"
            android:weightSum="1.5">

            <TextView
                style="@style/successDataDetailsRows"
                android:layout_width="0dp"
                android:fontFamily="@font/googlesans_medium"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_weight="0.5"
                android:text="Description"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/discD"
                style="@style/successDataDetailsRows"
                android:layout_width="0dp"
                android:fontFamily="@font/googlesans_medium"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/black"
                tools:text="Description" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:orientation="horizontal"
            android:weightSum="1.5">

            <TextView
                style="@style/successDataDetailsRows"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_normal"
                android:fontFamily="@font/googlesans_medium"
                android:layout_weight="0.5"
                android:text="Start Date"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/startD"
                style="@style/successDataDetailsRows"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="end"
                android:textColor="@color/black"
                tools:text="Start Date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:orientation="horizontal"
            android:weightSum="1.5">

            <TextView
                style="@style/successDataDetailsRows"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_weight="0.5"
                android:text="End Date"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/EndD"
                style="@style/successDataDetailsRows"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="end"
                android:textColor="@color/black"
                tools:text="End Date" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>